# Crew Assistant Configuration

# LM Studio API Configuration (default local setup)
OPENAI_API_BASE=http://localhost:1234/v1
OPENAI_API_KEY=not-needed-for-local
OPENAI_API_MODEL=your-model-name-here

# Timeout for LLM requests (in seconds)
LM_TIMEOUT=60

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Memory and Storage Settings
MAX_MEMORY_ENTRIES=1000
MEMORY_DIR=./memory/memory_store
FACTS_DIR=./memory/facts

# Agent Settings
AGENT_VERBOSE=true